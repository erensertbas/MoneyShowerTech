
@{
    ViewBag.Title = "BillingInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .sozlesme {
        max-width: 100%;
        color: black;
        background-color: white;
    }
    .basket{

        margin-left:18rem;
    }
    @@media screen and (max-width: 600px) {
        .modal-content {
            max-width: 100% !important;
        }

        .modal-dialog {
            margin-left: 10% !important;
        }

        .sozlesme {
            max-width: 100%;
            color: black;
            background-color: white;
        }
        .basket {
            margin-left: 1rem;
        }
    }
</style>
<!--Main layout-->
<main class="mt-5 pt-4">
    <div class="container wow fadeIn">

        <!-- Heading -->
        <h2 class="my-5 h2 text-center">Sepetim</h2>
        <hr style="height:2px;border-width:0;color:black;background-color:black; width:50%">
        <br />
        <br />

        <!--Grid row-->
        <div class="row">
            <!--Grid column-->
          

            <div class="col-md-6 mb-4 basket">

                <!-- Heading -->
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Ürününüz</span>

                </h4>

                <!-- Cart -->
                <ul class="list-group mb-3 z-depth-1">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <img src="~/Content/Template/imagess/thingshower4.png" style="height:180px; width:300px; margin-left:100px;" alt="Alternate Text" />
                        </div>

                    </li>
                </ul>

                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Sepetiniz</span>
                    <span class="badge badge-secondary badge-pill">1</span>
                </h4>

                <ul class="list-group mb-3 z-depth-1">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <h6 class="my-0">ThingShower</h6>
                        <span class="text-muted">@Moneyshowertech.PL.Resources.Language.ThingShowerNPrice</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Toplam</span>
                        <strong>@Moneyshowertech.PL.Resources.Language.ThingShowerNPrice</strong>
                    </li>
                </ul>
                <!-- Cart -->
                <!-- Promo code -->
                    <a href="@Moneyshowertech.PL.Resources.Language.ThingShowerLink">
                    <button class="btn btn-primary btn-lg btn-block" type="button">Ödeme Sayfasına Git</button>
                    </a>
                <!-- Promo code -->

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->

    </div>
</main>
<!--Main layout-->