
@{
    ViewBag.Title = "Sepet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Session["Sepet"] != null)
{
    <style>
        .sozlesme {
            max-width: 100%;
            color: black;
            background-color: white;
        }

        .basket {
            margin-left: 18rem;
        }

        .icerik {
            margin-left: 450px;
        }

        .icerik1 {
            margin-left: 300px;
        }

        .icerik2 {
            margin-left: 2em;
            width: 200px;
        }

        @@media screen and (max-width: 600px) {
            .modal-content {
                max-width: 100% !important;
            }

            .modal-dialog {
                margin-left: 10% !important;
            }

            .sozlesme {
                max-width: 100%;
                color: black;
                background-color: white;
            }

            .basket {
                margin-left: 0rem;
            }

            .photo {
                margin-left: 0px !important;
            }
        }
    </style>
    <div class="col-12 mb-3">

    </div>
    <!--Main layout-->
    <main class="mt-5 pt-4">
        <div class="container wow fadeIn">

            <!-- Heading -->
            <h2 class="my-5 h2 text-center">@Moneyshowertech.PL.Resources.Language.Basket</h2>
            <hr style="height:2px;border-width:0;color:black;background-color:black; width:50%">
            <br />
            <br />

            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-md-6 mb-4 basket">
                    @if (Session["Sepet"].ToString() == "ThingShower")
                    {
                        <!-- Heading -->
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">@Moneyshowertech.PL.Resources.Language.Product</span>

                        </h4>


                        <!-- Cart -->
                        <ul class="list-group mb-3 z-depth-1">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    @if (Session["Color"].ToString() == "1")
                                    {
                                        <img src="~/Content/Template/imagess/ThingShower/TS_02374-1.png" style="height:390px; width:320px; margin-left:100px;" class="photo" alt="Alternate Text" />
                                    }
                                    else if (Session["Color"].ToString() == "2")
                                    {
                                        <img src="~/Content/Template/imagess/ThingShower/TS_02371-1.png" style="height:390px; width:320px; margin-left:100px;" class="photo" alt="Alternate Text" />
                                    }
                                    else if (Session["Color"].ToString() == "3")
                                    {
                                        <img src="~/Content/Template/imagess/ThingShower/TS_02375-1.png"style="height:390px; width:320px; margin-left:100px;" class="photo" alt="Alternate Text" />
                                    }
                                    else if (Session["Color"].ToString() == "4")
                                    {
                                        <img src="~/Content/Template/imagess/ThingShower/TS_02370-1.png" style="height:390px; width:320px; margin-left:100px;" class="photo" alt="Alternate Text" />
                                    }
                                    else
                                    {
                                        <img src="~/Content/Template/imagess/ThingShower/TS_02375-1.png" style="height:390px; width:320px; margin-left:100px;" class="photo" alt="Alternate Text" />
                                    }

                                </div>

                            </li>
                        </ul>

                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">@Moneyshowertech.PL.Resources.Language.Basket</span>
                            <span class="badge badge-secondary badge-pill">1</span>
                        </h4>

                        <ul class="list-group mb-3 z-depth-1">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <h6 class="my-0">ThingShower</h6>
                                <span class="text-muted">@Moneyshowertech.PL.Resources.Language.ThingShowerNPrice</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@Moneyshowertech.PL.Resources.Language.Total</span>
                                <strong>@Moneyshowertech.PL.Resources.Language.ThingShowerNPrice</strong>
                            </li>

                            <li class="list-group-item d-flex justify-content-between">
                                <span>@Moneyshowertech.PL.Resources.Language.Colors</span>
                                @if (Session["Color"].ToString() == "1")
                                {
                                    <strong>@Moneyshowertech.PL.Resources.Language.Gray</strong>
                                }
                                else if (Session["Color"].ToString() == "2")
                                {
                                    <strong>@Moneyshowertech.PL.Resources.Language.Blue</strong>
                                }
                                else if (Session["Color"].ToString() == "3")
                                {
                                    <strong>@Moneyshowertech.PL.Resources.Language.Black</strong>
                                }
                                else if (Session["Color"].ToString() == "4")
                                {
                                    <strong>@Moneyshowertech.PL.Resources.Language.Pink</strong>
                                }
                               else 
                                {
                                <strong>@Moneyshowertech.PL.Resources.Language.Black</strong>
                                }



                            </li>
                        </ul>
                        <!-- Cart -->
                        <!-- Buy  -->


                        using (Html.BeginForm("Home", "ThingShower", FormMethod.Post))
                        {
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-gift" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" id="TxtDiscountCode" placeholder="@Moneyshowertech.PL.Resources.Language.DiscountCode" aria-label="Username" aria-describedby="basic-addon1">
                            </div>

                        }

                            <script>
                            function buy() {
                                data = document.getElementById('TxtDiscountCode').value;
                               
                                if (@Session["Color"].ToString() == "0") {
                                    if (data == "doktor") {
                                        window.location.href = 'https://iyzi.link/AGUL1w';
                                    }
                                    else if (data == "dr20") {
                                        window.location.href = 'https://iyzi.link/AGUdXA';
                                    }
                                    else {
                                        window.location.href = 'https://iyzi.link/AFk4Tg';
                                    }
                                }

                                if (@Session["Color"].ToString() == "1") { //grey
                                    if (data=="doktor") {
                                        window.location.href = 'https://iyzi.link/AGWGXA';
                                    }
                                    else if (data=="dr20") {
                                        window.location.href = 'https://iyzi.link/AGWGUg';

                                    }
                                    else {
                                        window.location.href = 'https://iyzi.link/AGWGSA';
                                    }
                                }
                                 
                                if (@Session["Color"].ToString() == "2") { // blue
                                    if (data=="doktor") {
                                        window.location.href = 'https://iyzi.link/AGWGPg';
                                    }
                                    else if (data=="dr20") {
                                        window.location.href = 'https://iyzi.link/AGWGQw';
                                    }
                                    else {
                                        window.location.href = 'https://iyzi.link/AGWGOQ';
                                    }
                                }
                                 
                                if (@Session["Color"].ToString() == "3") { //black
                                    if (data=="doktor") {
                                        window.location.href = 'https://iyzi.link/AGUL1w';
                                    }
                                    else if (data=="dr20") {
                                        window.location.href = 'https://iyzi.link/AGUdXA';
                                    }
                                    else {
                                        window.location.href = 'https://iyzi.link/AFk4Tg';
                                    }
                                }

                                if (@Session["Color"].ToString() == "4") { //pink
                                    if (data=="doktor") {
                                        window.location.href = 'https://iyzi.link/AGWGKg';
                                    }
                                    else if (data=="dr20") {
                                        window.location.href = 'https://iyzi.link/AGWGGw';
                                    }
                                    else {
                                        window.location.href = 'https://iyzi.link/AGWGDA';
                                    }
                                }

                            }

                            function buyEn() {
                                data = document.getElementById('TxtDiscountCode').value;
                                window.location.href = 'https://iyzi.link/AFlQmg';
                            }

                            </script>

                        <div>
                            @if (Moneyshowertech.PL.Resources.Language.ShortName == "TR")
                            {

                                <button class="btn btn-primary btn-lg btn-block" onclick=buy(); type="submit">@Moneyshowertech.PL.Resources.Language.PaymentText</button>

                            }
                            else
                            {

                                <button class="btn btn-primary btn-lg btn-block" onclick=buyEn(); type="submit">@Moneyshowertech.PL.Resources.Language.PaymentText</button>

                            }
                        </div>
                        <!-- Buy -->
                    }
                    else
                    {
                        <!-- Heading -->
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">@Moneyshowertech.PL.Resources.Language.Product</span>

                        </h4>


                        <!-- Cart -->
                        <ul class="list-group mb-3 z-depth-1">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <img src="~/Content/Template/imagess/MoneyCountingShower.jpg" style="height:auto; width:300px; margin-left:100px;" class="photo" alt="Alternate Text" />
                                </div>

                            </li>
                        </ul>

                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">@Moneyshowertech.PL.Resources.Language.Basket</span>
                            <span class="badge badge-secondary badge-pill">1</span>
                        </h4>

                        <ul class="list-group mb-3 z-depth-1">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <h6 class="my-0">MoneyCountingShower</h6>
                                <span class="text-muted">@Moneyshowertech.PL.Resources.Language.MoneyCountingShowerNPrice</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Toplam</span>
                                <strong>@Moneyshowertech.PL.Resources.Language.MoneyCountingShowerNPrice</strong>
                            </li>
                        </ul>
                        <!-- Cart -->
                        <!-- Buy  -->
                        <form action="Home/ClearBasket" method="post">
                            <a target="_blank" href="">
                                <button class="btn btn-primary btn-lg btn-block" type="submit">@Moneyshowertech.PL.Resources.Language.PaymentText</button>
                            </a>
                        </form>

                        <!-- Buy -->
                    }
                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->

        </div>
    </main>
    <!--Main layout-->

}
else
{
    <style>


        .icerik2 {
            margin-left: 29em;
        }

        .icerikdiv {
            margin-bottom: 20em;
            margin-top: 15em;
        }

        .sozlesme {
            max-width: 100%;
            color: black;
            background-color: white;
        }

        @@media screen and (max-width: 600px) {
            .icerik2 {
                margin-left: 0em;
            }

            .icerikdiv {
                margin-bottom: 10em;
                margin-top: 5em;
            }

            .modal-content {
                max-width: 100% !important;
            }

            .modal-dialog {
                margin-left: 10% !important;
            }

            .sozlesme {
                max-width: 100%;
                color: black;
                background-color: white;
            }
        }
    </style>
    <div class="col-12 mb-5">

    </div>
    <div class="col-12 mb-5">

    </div>
    <div class="container icerikdiv">
        <div class="col-12 text-center icerik">
            <h5>
                @Moneyshowertech.PL.Resources.Language.BasketText
            </h5>
            <br />
        </div>
        <div class="col-12 text-center icerik1">
            <h2>@Moneyshowertech.PL.Resources.Language.BasketText1</h2>
        </div>
        <a href="/@Moneyshowertech.PL.Resources.Language.ShortName/ThingShower" class="btn btn-black align-items-center rounded-0 d-block d-lg-inline-block icerik2">@Moneyshowertech.PL.Resources.Language.BasketText2</a>
    </div>

}

